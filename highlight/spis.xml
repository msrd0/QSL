<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd">
<language name="SPIS" version="0.1.2" section="Database" extensions="*.spis" mimetype="text/plain" priority="1">
	<highlighting>
		
		<list name="keywords">
			<item>database</item>
			<item>charset</item>
			<item>usevar</item>
			<item>table</item>
		</list>
		
		<list name="types">
			<item>int</item>
			<item>uint</item>
			<item>double</item>
			<item>char</item>
			<item>text</item>
			<item>password</item>
			<item>byte</item>
			<item>blob</item>
			<item>date</item>
			<item>time</item>
			<item>datetime</item>
			<item>variant</item>
		</list>
		
		<list name="constraints">
			<item>none</item>
			<item>notnull</item>
			<item>unique</item>
			<item>primarykey</item>
		</list>
		
		<contexts>
			<context attribute="Normal" lineEndContext="#stay" name="Normal">
				<keyword attribute="Keyword" context="#stay" String="keywords" />
				<DetectChar attribute="Symbol" context="Column" char="-" />
				<DetectChar attribute="String" context="String" char="&quot;" />
				<DetectChar attribute="Comment" context="Comment" char="#" />
			</context>
			<context attribute="Normal" lineEndContext="#pop" name="Column">
				<keyword attribute="DataType" context="DataType" String="types" />
				<RegExpr attribute="DataType" context="#stay" String="&amp;\S+\.\S+" />
				<DetectChar attribute="String" context="String" char="&quot;" />
				<RegExpr attribute="Number" context="#stay" String=" -?\d+(\.\d+)?( |$)" />
				<RegExpr attribute="Number" context="#stay" String=" \d+-\d+-\d+( |$)" />
				<RegExpr attribute="Number" context="#stay" String=" \d+:\d+:\d+( |$)" />
				<RegExpr attribute="Extension" context="#stay" String="\+(&quot;[^&quot;]*&quot;|[^\s\],]+)(?=[,\]])" />
				<DetectChar attribute="Keyword" context="Constraint" char="!" />
			</context>
			<context attribute="Normal" lineEndContext="#pop" name="DataType">
				<AnyChar attribute="Number" context="#stay" String="0123456789KMG" />
				<AnyChar attribute="Normal" context="#pop" String=" )" />
			</context>
			<context attribute="Normal" lineEndContext="#pop" name="Constraint">
				<keyword attribute="Keyword" context="#pop" String="constraints" />
			</context>
			<context attribute="String" lineEndContext="#pop" name="String">
				<DetectChar attribute="String" context="#pop" char="&quot;" />
			</context>
			<context attribute="Comment" lineEndContext="#pop" name="Comment">
			</context>
		</contexts>
		
		<itemDatas>
			<itemData name="Normal" defStyleNum="dsNormal"/>
			<itemData name="Symbol" defStyleNum="dsControlFlow"/>
			<itemData name="String" defStyleNum="dsString"/>
			<itemData name="Number" defStyleNum="dsDecVal"/>
			<itemData name="Keyword" defStyleNum="dsKeyword"/>
			<itemData name="DataType" defStyleNum="dsDataType"/>
			<itemData name="Extension" defStyleNum="dsExtension"/>
			<itemData name="Comment" defStyleNum="dsComment"/>
		</itemDatas>
		
		<general>
			<comments>
				<comment name="singleLine" start="#" />
			</comments>
			<keywords casesensitive="1" />
		</general>
		
	</highlighting>
</language>
